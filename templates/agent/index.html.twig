{% extends 'base.html.twig' %}
{% block title 'Agent de mon Agence ' %}

{% block body %}
    <div class="container my-4">
        <h3 class="font-weight-light"> Personnel @Mon_Agence_Sample </h3>
        <hr class="my-4">
        <div class="row flex">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">NOM</th>
                    <th scope="col">PRENOMS</th>
                </tr>
                </thead>
                <tbody>
                {% for agent in agents %}
                <tr >
                    <th scope="row">1</th>
                    <td>{{ agent.firstname }}</td>
                    <td>{{ agent.lastname }}</td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}